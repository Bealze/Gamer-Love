<item name="cookie_dough" class="Consumable" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="1.0"/>
		<param name="stack_size" value="10"/>		
		<param name="display_name" value="cookie_dough"/>
		<param name="description" value="raw cookie dough, used for baking"/>
	</params>

	<geometry>
		<thirdperson name="objects/medcan/dough/dough.cgf" material="objects/medcan/dough/dough_mtl.mtl"/>
	</geometry>

	<consumable>
		<param name="cookable" value="1"/>
		<param name="cookedItem" value="Cookies"/>
		<param name="cookedTime" value="125"/>
		<param name="curable" value="1"/>
		<param name="foodAmount" value="150"/>
		<param name="poisonChance" value="5"/>
		<param name="soundConsumed" value="Play_food_soft_eat"/>
	</consumable>

	<usable>
		<uses>
			<use>
				<param name="title" value="cookie_doughCookInOven"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_oven"/>
				<param name="targetClassNames" value="powered_oven"/>
			</use>
			<use>
				<param name="title" value="cookie_doughCookInMicrowave"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_microwave"/>
				<param name="targetClassNames" value="powered_microwave"/>
			</use>
			<use>
				<param name="title" value="cookie_doughCookOnGrill"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_grill_base;dws_grill2"/>
			</use>
			<use>
				<param name="title" value="cookie_doughCookOnStove"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_cabinStove"/>
			</use>
			<use>
				<param name="title" value="cookie_doughCookOnFirepit"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_firepit_outdoors_1;dws_firepit_outdoors_2"/>
			</use>
			<use>
				<param name="title" value="cookie_doughCookOnCampfire"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="Campfire"/>
			</use>
		</uses>
	</usable>
	
	<storage>
		<locations>
			<location category="any"/>
		</locations>
	</storage>

</item>