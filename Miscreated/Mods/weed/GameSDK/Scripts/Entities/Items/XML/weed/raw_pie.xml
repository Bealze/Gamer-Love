<item name="raw_pie" class="Consumable" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="1.0"/>
		<param name="stack_size" value="64"/>		
		<param name="display_name" value="raw_pie"/>
		<param name="description" value="berry pie uncooked"/>
	</params>

	<geometry>
		<thirdperson name="objects/medcan/baked/pie/pie.cgf" material="Objects/medcan/baked/pie/raw_pie_mtl.mtl"/>/>
	</geometry>

	<consumable>
		<param name="cookable" value="1"/>
		<param name="cookedItem" value="pie"/>
		<param name="cookedTime" value="225"/>
		<param name="curable" value="1"/>
		<param name="foodAmount" value="250"/>
		<param name="poisonChance" value="30"/>
		<param name="soundConsumed" value="Play_food_soft_eat"/>
	</consumable>

	<usable>
		<uses>
			<use>
				<param name="title" value="raw_pieCookInOven"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_oven"/>
				<param name="targetClassNames" value="powered_oven"/>
			</use>
			<use>
				<param name="title" value="raw_pieCookInMicrowave"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_microwave"/>
				<param name="targetClassNames" value="powered_microwave"/>
			</use>
			<use>
				<param name="title" value="raw_pieCookOnGrill"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_grill_base;dws_grill2"/>
			</use>
			<use>
				<param name="title" value="raw_pieCookOnStove"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_cabinStove"/>
			</use>
			<use>
				<param name="title" value="raw_pieCookOnFirepit"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_firepit_outdoors_1;dws_firepit_outdoors_2"/>
			</use>
			<use>
				<param name="title" value="raw_pieCookOnCampfire"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="Campfire"/>
			</use>
		</uses>
	</usable>
	
	<storage>
		<locations>
			<location category="any"/>
		</locations>
	</storage>

</item>