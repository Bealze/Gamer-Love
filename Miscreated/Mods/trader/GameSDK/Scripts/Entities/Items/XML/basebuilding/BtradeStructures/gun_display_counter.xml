		<param name="selectable" value="0"/>
		<param name="mass" value="-1"/> 
		<param name="limit" value="5"/>
		<param name="display_name" value="Gun Counter"/>		
		<param name="description" value="Buy And Sell Guns Here"/>
	</params>

	<base_part class="static" type="528" name="gun_display_counter" max_health="5000" limit="3">
